function login(){
  const p=pass.value;
  const saved=localStorage.getItem("k9_pass")||DEFAULT_PASS;
  if(p===saved){
    localStorage.setItem("k9_login","yes");
    showApp();
  }else{
    error.innerText="Sai máº­t kháº©u!";
  }
}
function showApp(){
  loginDiv.style.display="none";
  app.style.display="flex";
  welcome();
}
function logout(){
  localStorage.removeItem("k9_login");
  location.reload();
}
